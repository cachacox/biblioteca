@model biblioteca.Models.socio
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/bootstrap.css" rel="stylesheet" />
    <title>Socio</title>
</head>
<body>
    @using (Html.BeginForm())
    {
    <div class="container">
            @Html.ValidationSummary()
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Busqueda</label>
                    @Html.TextBoxFor(x => x.idsocio, new { @class = "form-control" })
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Buscar" />
                </form>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Insertar</label>
                    <table align="center">
                        <tr>
                            <td>Nombre: </td>
                            <td>@Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })</td>
                        </tr>
                        <tr>
                            <td>Dirección: </td>
                            <td>@Html.TextBoxFor(x => x.direccion, new { @class = "form-control" })</td>
                        </tr>
                    </table>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Insertar" />
                </form>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Eliminar</label>
                    @Html.TextBoxFor(x => x.idsocio, new { @class = "form-control" })
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Eliminar" />
                </form>
            </div>
    </div>
    }
</body>
</html>
