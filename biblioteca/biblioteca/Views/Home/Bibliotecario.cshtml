
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bibliotecario</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container">
            @Html.ValidationSummary()
