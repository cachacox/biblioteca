                    <label for="exampleInputEmail1">Comprobar Socio</label>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Comprobar Socio" />
                </form>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Gestionar Libro </label>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Gestionar Libro" />
                </form>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Gestionar Préstamo</label>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Gestionar Préstamo" />
                </form>
            </div>
        </div>
    }
</body>
</html>
