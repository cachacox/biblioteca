@model biblioteca.Models.prestamo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>gestionarprestamo</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container">
            @Html.ValidationSummary()
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Insertar Prestamo: </label>
                    <table>
                        <tr>ID Libro: </tr>
                        <tr>@Html.TextBoxFor(x => x.idlibro, new { @class = "form-control" })</tr>
                        <tr>ID Socio: </tr>
                        <tr>@Html.TextBoxFor(x => x.idsocio, new { @class = "form-control" })</tr>                        
                    </table>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Insertar" />
                </form>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Eliminar Prestamo: </label>
                    <table>
                        <tr>Id Libro: </tr>
                        <tr>@Html.TextBoxFor(x => x.idlibro, new { @class = "form-control" })</tr>
                    </table>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Eliminar" />
                </form>
            </div>
        </div>
    }
</body>
</html>
