@model biblioteca.Models.libro
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usuario</title>
</head>
<body>
@using (Html.BeginForm())
{
    <div class="container">
        @Html.ValidationSummary()
        <div>
            <form method="post">
                <label for="exampleInputEmail1">Busqueda libro: </label>
                @Html.TextBoxFor(x => x.idlibro, new { @class = "form-control" })
