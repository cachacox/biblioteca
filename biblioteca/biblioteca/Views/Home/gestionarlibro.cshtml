@model biblioteca.Models.libro

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>gestionarlibro</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="container">
            @Html.ValidationSummary()
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Insertar Libro: </label>
                    <table>
                      <tr>Título Libro: </tr>
                      <tr>@Html.TextBoxFor(x => x.titulo, new { @class = "form-control" })</tr>
                        <tr>Autor Libro: </tr>
                        <tr>@Html.TextBoxFor(x => x.autor, new { @class = "form-control" })</tr>
                        <tr>Localización: </tr>
                        <tr>@Html.TextBoxFor(x => x.localizacion, new { @class = "form-control" })</tr>
                        <tr>Signatura: </tr>
                        <tr>@Html.TextBoxFor(x => x.signatura, new { @class = "form-control" })</tr>
                    </table>                    
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Insertar" />
                </form>
            </div>
            <div class="col-md-4">
                <form method="post">
                    <label for="exampleInputEmail1">Eliminar Libro: </label>
                    <table>
                        <tr>Id Libro: </tr>
                        <tr>@Html.TextBoxFor(x => x.idlibro, new { @class = "form-control" })</tr>
                    </table>
                    <input style="display:block;margin:0 auto" name="valor" type="submit" value="Eliminar" />
                </form>
            </div>
        </div>
    }
</body>
</html>
